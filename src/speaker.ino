int spkFreq[] = {1950, 2000, 1950, 2150, 2100, 2150};

/*----------------------------------------------------------------------------*/

void setupSpeaker()
{
  pinMode(3, OUTPUT);
}

/*----------------------------------------------------------------------------*/

void doBeep()
{
  for (byte i = 0; i < 5; i++)
  {
    for (byte x = 0; x<6; x++)
    {
      tone(3, spkFreq[x]);
      delay(250);
    }
    noTone(3);
  }
}

/*----------------------------------------------------------------------------*/

void shortBeep(const int count)
{
  for (byte i = 0; i< count; i++)
  {
    tone(3, 1500);
    delay(20);
    noTone(3);
    delay(100);
  }
}

/*----------------------------------------------------------------------------*/

void errorBeep()
{
  for (byte i = 0; i < 4; i++)
  {
    tone(3, 1500);
    delay(200);
    tone(3, 1000);
    delay(200);
  }
	noTone(3);
}

